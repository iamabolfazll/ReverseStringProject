@{
    ViewData["Title"] = "سامانه معکوس کننده رشته‌ها";
}

<!-- فقط Bootstrap و Bootstrap Icons از CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

<!-- هدر -->
<header class="bg-primary text-white py-5 mb-5 text-center">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">
            <i class="bi bi-arrow-left-right me-2"></i>
            سامانه معکوس کننده رشته‌ها
        </h1>
        <p class="lead mb-0">رشته‌های خود را به صورت حرفه‌ای و آنلاین معکوس کنید</p>
    </div>
</header>

<!-- بخش اصلی -->
<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- کارت فرم -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-magic me-2"></i>
                        معکوس‌سازی هوشمند
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="ReverseString" method="post">
                        <div class="mb-4 text-end" dir="rtl">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-chat-square-text ms-2 text-primary"></i>
                                رشته مورد نظر خود را وارد کنید
                            </label>
                            <input type="text"
                                   name="inputText"
                                   class="form-control form-control-lg text-end"
                                   placeholder="هرچه می‌خواهد دل تنگت بگو"
                                   value="@ViewBag.Original"
                                   required>
                            <div class="form-text mt-2">
                                <i class="bi bi-info-circle ms-1"></i>
                                پشتیبانی از زبان‌های فارسی، انگلیسی و ترکیبی
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-repeat me-2"></i>
                                معکوس کن
                            </button>
                        </div>
                    </form>

                    <!-- خطا -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-4">
                            <i class="bi bi-exclamation-octagon-fill me-2"></i>
                            <strong>خطا:</strong> @ViewBag.Error
                        </div>
                    }

                    <!-- نتیجه -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success mt-4 text-center" dir="rtl">
                            <!-- عنوان -->
                            <div class="d-flex flex-column align-items-center mb-3">
                                <i class="bi bi-check-circle-fill fs-1 mb-2"></i>
                                <h5 class="mb-1 fw-bold">عملیات موفق</h5>
                                <p class="mb-0">رشته شما با موفقیت معکوس شد</p>
                            </div>

                            <!-- نتایج -->
                            <div class="row g-3 justify-content-center">
                                <div class="col-md-5">
                                    <div class="border rounded p-3 bg-light text-center h-100">
                                        <h6 class="text-primary mb-2">
                                            <i class="bi bi-arrow-right-circle ms-1"></i>
                                            رشته اصلی
                                        </h6>
                                        <p class="mb-2 text-break fw-semibold">@ViewBag.Original</p>
                                        <small class="text-muted">طول: @ViewBag.Original?.Length کاراکتر</small>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="border rounded p-3 bg-light text-center h-100">
                                        <h6 class="text-success mb-2">
                                            <i class="bi bi-arrow-left-circle ms-1"></i>
                                            رشته معکوس
                                        </h6>
                                        <p class="mb-2 text-break fw-semibold">@ViewBag.Reversed</p>
                                        <small class="text-muted">عملیات تکمیل شد</small>
                                    </div>
                                </div>
                            </div>

                            <!-- پالیندروم -->
                            @if (ViewBag.IsPalindrome == true)
                            {
                                <div class="text-center mt-4 border-top pt-3">
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="bi bi-stars ms-2"></i>
                                        این رشته یک پالیندروم است!
                                    </span>
                                </div>
                            }
                        </div>

                    }
                </div>
            </div>

            <!-- کارت‌های ویژگی‌ها -->
            <div class="row text-center g-3">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-lightning-charge-fill text-primary fs-2 mb-2"></i>
                            <h5 class="fw-bold">سریع</h5>
                            <p class="text-muted mb-0">پردازش آنی و بدون تأخیر</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-shield-check text-success fs-2 mb-2"></i>
                            <h5 class="fw-bold">امن</h5>
                            <p class="text-muted mb-0">بدون ذخیره داده‌های شما</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-globe2 text-warning fs-2 mb-2"></i>
                            <h5 class="fw-bold">فراگیر</h5>
                            <p class="text-muted mb-0">پشتیبانی از همه زبان‌ها</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- فوتر -->
<footer class="bg-light py-4 mt-5 border-top">
    <div class="container text-center" dir="rtl">
        <p class="mb-0 text-muted fw-semibold">
            <i class="bi bi-cpu ms-2 text-primary"></i>
            سامانهٔ معکوس‌کنندهٔ رشته‌ها — توسعه‌یافته با ASP.NET Core
        </p>
    </div>

</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
